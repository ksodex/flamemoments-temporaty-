datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Account {
    id           String   @id @default(uuid())
    email        String   @unique
    password     String
    telegramId   String?
    createdAt    DateTime @default(now())
    updateAt     DateTime @updatedAt
    lastLogin    DateTime @default(now())
    sessionToken String?  @unique
    name         String?
}



model Shop {
    id Int @id @default(autoincrement())

    // candles CandleProduct
}

model CandleProduct {
    id String @id @default(uuid())

    title       String
    description String
    images      String[]
    typeProduct TypeProduct

    price        Int
    quantity     Int      @default(0)
    released     DateTime @default(now())
    giftIncluded Boolean

    isPublished Boolean         @default(false)
    colors      AviableColors[]
    smells      AviableSmells[]
}

// model KitProduct {}

enum TypeProduct {
    Candle
    Kit
}

enum AviableColors {
    DefaultColor
}

enum AviableSmells {
    DefaultSmell
}
