datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Account {
    id           String   @id @unique @default(uuid())

    email        String   @unique
    password     String
    telegramId   String?  @unique

    createdAt    DateTime @default(now())
    updateAt     DateTime @updatedAt
    lastLogin    DateTime @default(now())
    sessionToken String?  @unique
}

model DeliveryInfo {
    id          Int    @id @unique @default(autoincrement())

    firstName   String
    lastName    String
    middleName  String
    phoneNumber Int

    index       Int
    country     String
    city        String
    street      String
}

model CandleProduct {
    id           String          @id @unique @default(uuid())

    title        String          @unique
    description  String
    images       String[]
    typeProduct  TypeProduct

    price        Int
    quantity     Int             @default(0)
    released     DateTime        @default(now())
    giftIncluded Boolean

    isPublished  Boolean         @default(false)
    colors       AviableColors[]
    smells       AviableSmells[]
}

model KitProduct {
    id       String   @id @unique @default(uuid())

    title    String   @unique
    included String[]
}

enum TypeProduct {
    Candle
    Kit
}

enum AviableColors {
    DefaultColor
}

enum AviableSmells {
    DefaultSmell
}
