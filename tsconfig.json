{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "es2021",
        "lib": ["ESNext"],
        "module": "commonjs",
        "rootDir": "./",
        "resolveJsonModule": true,
        "allowJs": true,
        "outDir": "./build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true
    },
    
    "include": ["**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
}
